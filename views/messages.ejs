<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Messages Board</title>
  </head>
  <body>
    <a href="/">Home</a>
    <h1>MESSAGES: I LIKE PURPLE</h1>

    <!-- Messages Display Section -->
    <% for (let message of messages) { %>
    <div class="message">
      <!-- Author Information -->
      <% if (!currentUser || !currentUser.is_member) { %>
      <h3>Anonymous user</h3>
      <% } else { %>
      <h3><%= message.first_name %> <%= message.last_name %></h3>
      <span><%= message.message_time %></span>
      <% } %>

      <!-- Message Content -->
      <h3><%= message.message_title %></h3>
      <h3><%= message.message_body %></h3>

      <!-- Admin Controls -->
      <% if (currentUser && currentUser.is_admin) { %>
      <form action="/delete-post" method="POST">
        <input
          type="hidden"
          name="messageID"
          value="<%= message.message_id %>"
        />
        <button type="submit">Delete</button>
      </form>
      <% } %>
    </div>
    <% } %>

    <!-- Message Form Section -->
    <% if (currentUser) { %>
    <h2>Add a message</h2>
    <form action="/add-message" method="POST">
      <div>
        <label for="messageTitle">Title</label>
        <input type="text" id="messageTitle" name="messageTitle" required />
      </div>
      <div>
        <label for="messageBody">Message</label>
        <textarea id="messageBody" name="messageBody" required></textarea>
      </div>
      <button type="submit">Submit</button>
    </form>
    <% } else { %>
    <h2>You can't post any messages until you are verified!</h2>
    <% } %>
  </body>
</html>
